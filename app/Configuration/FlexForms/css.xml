<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<T3DataStructure>
  <meta type="array">
    <langDisable>1</langDisable>
  </meta>
  <sheets>
    <general>
      <ROOT type="array">
        <TCEforms>
          <sheetTitle>Onepage Optionen</sheetTitle>
        </TCEforms>
        <el type="array">

          <image type="array">
            <TCEforms type="array">
              <label>Paralax Bild</label>
              <config type="array">
                <type>group</type>
                <internal_type>file</internal_type>
                <allowed>jpg,gif,png</allowed>
                <max_size>2000</max_size>
                <uploadfolder>uploads/tx_gridelements</uploadfolder>
                <show_thumbs>1</show_thumbs>
                <size>1</size>
                <minitems>0</minitems>
                <maxitems>1</maxitems>
              </config>
            </TCEforms>
          </image>

          <css type="array">
            <TCEforms type="array">
              <label>CCS Background</label>
              <config type="array">
                <type>select</type>
                <items type="array">
                  <numIndex index="0" type="array"><numIndex index="0">Weiß</numIndex><numIndex index="1">bg-white</numIndex></numIndex>
                  <numIndex index="1" type="array"><numIndex index="0">Grau</numIndex><numIndex index="1">bg-light</numIndex></numIndex>
                  <numIndex index="2" type="array"><numIndex index="0">Dark</numIndex><numIndex index="1">bg-dark text-white</numIndex></numIndex>
                  <numIndex index="3" type="array"><numIndex index="0">Blau</numIndex><numIndex index="1">bg-primary text-white</numIndex></numIndex>
                  <numIndex index="4" type="array"><numIndex index="0">Grün</numIndex><numIndex index="1">bg-success text-white</numIndex></numIndex>
                  <numIndex index="5" type="array"><numIndex index="0">Trenner</numIndex><numIndex index="1">bg-devider</numIndex></numIndex>
                </items>
              </config>
              <onChange>reload</onChange>
            </TCEforms>
          </css>

          <inlinecss type="array">
            <TCEforms type="array">
              <label>CSS-Inline</label>
              <config type="array">
                <type>input</type>
                <size>250</size>
                <eval>trim</eval>
                <default></default>
              </config>
              <displayCond>FIELD:css:=:bg-devider</displayCond>
            </TCEforms>
          </inlinecss>

        </el>
      </ROOT>
    </general>
  </sheets>
</T3DataStructure>
